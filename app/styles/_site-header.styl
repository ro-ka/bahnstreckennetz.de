.site-header
  display: inline-block
  margin: 4em 0
  position: relative
  left: 50%
  transform: translateX(-50%)
  color: $white
  background: $black
  padding: 0 1em
  a
    color: $white
    &:hover, &:focus
      color: $grey
  &--on-map
    position: absolute
    top: 3em
    left: 4vw
    margin: 0
    width: calc(65vw + 5em)
    max-width: 92vw
    transform: translate(0)
    @media (min-width: 700px)
      width: 34em
  &__toggle
    position: absolute
    top: 0.1em
    right: 0.7em
    padding-left: 1.5em
    @media (min-width: 400px)
      top: 0.4em
    @media (min-width: 678px)
      top: 1em
    &__icon
      position: absolute
      top: 50%
      left: 0.2em
      width: 1em
      height: 1em
      transition: .25s transform ease
      transform: translateY(-50%)
  &--show-content &__toggle__icon
    transform: rotate(180deg) translateY(50%)
  &__content
    transition: .25s max-height ease
    overflow: hidden
    max-height: 0
  &--show-content &__content
    max-height: 20em
  a&__link
    color: $white
    display: inline-block
    text-decoration: none
    &:hover, &:focus
      color: $white
      h1
        text-shadow: -4px -4px 0 $black, -1px 1px 0 $black, 1px 1px 0 $black, 1px -1px 0 $black
    h1
      font-size: 9vw
      margin: -0.3em 0 0 -0.6em
      transition: all .2s ease
      text-shadow: -1px -1px 0 $black, -1px 1px 0 $black, 4px 4px 0 $black, 1px -1px 0 $black
      @media (min-width: 700px)
        font-size: emCalc(63px)
