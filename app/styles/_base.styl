/**
 * The base styles
 */
html
  box-sizing: border-box
*, *:before, *:after
   box-sizing: inherit

html, body
  width: 100%
  padding: 0
  margin: 0
  font-size: 100%
  font-family: Quark, Arial, Helvetica, sans-serif
  line-height: 1.3
  color: $black
  background: $white

::-moz-selection {
  color: $white;
  background: rgba(244,82,82,0.8);
}
::selection {
  color: $white;
  background: rgba(244,82,82,0.8);
}

button
  font-size: 1rem
  display: flex
  justify-content: center
  align-items: center
  background: $black
  border: none
  padding: 0.15em 0.4em
  margin: 0
  transition: background .4s ease
  &:hover, &:focus
    background: $black-hover

a
  color: $black
  transition: color .2s ease, background .2s ease
  &:hover, &:focus
    color: $black-hover

.map-site
  overflow: hidden
  height: 100%

.content
  margin: 0 auto
  max-width: 37em
  width: 90%

.error
  font-size: 42vw
  text-align: center
  font-weight: bold
  text-shadow: 7px 7px $black, 1px -1px $black, -1px 1px $black, -1px -1px $black;
  color: $white;
